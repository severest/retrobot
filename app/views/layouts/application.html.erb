<!DOCTYPE html>
<html>
  <head>
    <title>Retrobot</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.4/lodash.min.js"></script>
  </head>

  <body>
    <div class="control-panel">
      <div>
        Retrobot
      </div>
      <div class="input-group">
        <input type="text" id="content" class="form-control hide">
        <span class="input-group-btn">
          <button class="btn btn-default hide" id="sendPlusBtn" type="button">Plus</button>
          <button class="btn btn-default hide" id="sendDeltaBtn" type="button">Delta</button>
        </span>
      </div>
    </div>

    <%= yield %>

  </body>
</html>
